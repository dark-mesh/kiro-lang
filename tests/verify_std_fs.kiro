// Test for std fs module
import std_fs

fn main() {
    print "=== Testing std_fs ==="
    
    // Test write
    print "Testing write..."
    var write_result = std_fs.write("test_file.txt", "Hello from Kiro!")
    on (write_result) {
        print "write: Success"
    } error {
        print "write: Error"
    }
    
    // Test exists
    print "Testing exists..."
    var exists_result = std_fs.exists("test_file.txt")
    print exists_result
    
    // Test read
    print "Testing read..."
    var read_result = std_fs.read("test_file.txt")
    on (read_result) {
        print read_result
    } error {
        print "read: Error"
    }
    
    // Test remove
    print "Testing remove..."
    var remove_result = std_fs.remove("test_file.txt")
    on (remove_result) {
        print "remove: Success"
    } error {
        print "remove: Error"
    }
    
    // Verify file is gone
    print "Testing exists after remove..."
    var exists_after = std_fs.exists("test_file.txt")
    print exists_after
    
    print "=== std_fs tests complete ==="
}

main()
